doctype html
html
    head
        base(href='/')
        //Import Google Icon Font
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        //Import materialize.css
        link(type='text/css', rel='stylesheet', href='/grp17/stylesheets/materialize.min.css',  media='screen,projection')
        //Let browser know website is optimized for mobile
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

    body(bgcolor="#ffffff")
        nav.red.accent-4
            div.nav-wrapper
                a.brand-logo(href="/grp17/client/client_horaire", style="margin-left:40px") ResaBike
                a.button-collapse(href="#", data-activates="mobile-demo")
                    i.material-icons menu
                ul#nav-mobile.right.hide-on-med-and-down
                    li
                        a(href="/grp17/chauffeur") #{translation.RESERVATIONS}
                    li
                        a(href="/grp17/login", style="margin-right:40px") Logout
                ul#mobile-demo.side-nav
                    li
                        a(href="/grp17/chauffeur") #{translation.RESERVATIONS}
                    li
                        a(href="/grp17/login") Logout
        block content


        //Import jQuery before materialize.js
        script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js')

        //autocompletion script
        script(src='/grp17/javascripts/apiCompletion.js')
        link(href='/grp17/stylesheets/jquery-ui.min.css', rel='stylesheet')
        script(src='/grp17/javascripts/selectquery.js')
        //Module line
        script(type='text/javascript', src='javascripts/chauffeurquery.js')
        script(src='/grp17/javascripts/search-it.js')
